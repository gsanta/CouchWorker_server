{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "filesGlob": [
      "src/**/*.ts",
      "!node_modules/**"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "!node_modules/@types"
    ]
}
